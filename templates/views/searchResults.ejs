<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
    <!-- Include Bootstrap CSS for styling -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.5.2/dist/css/bootstrap.min.css">
</head>
<body>
  <%- include('../partials/Header') %>
    <div class="container mt-5 pt-5">
        <h1 class="mt-4">Search Results</h1>
        <div class=" mt-4 row ">
            <% blogs.forEach(blog => { %>
                
                    
                    <div class="card "  style="width: 18rem;">
                      <img src="<%= blog.blogImage %>" class="card-img-top" alt="...">
                      <div class="card-body">
                        <h5 class="card-title"><%= blog.title %></h5>
                        
                        <a href="/blogs/<%= blog._id %>" class="btn btn-primary">Read</a>
                      </div>
                    </div>
                
            <% }); %>
                  </div>
        <a href="/" class="btn btn-primary mt-4">Back to Home Page</a>
    </div>

    <!-- Include Bootstrap JavaScript and jQuery scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.2/dist/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</body>
</html>



